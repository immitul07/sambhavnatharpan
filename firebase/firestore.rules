rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // Accounts and progress are readable/writable only by authenticated clients.
    // Promote admin-only or per-user ownership constraints from here once user auth is finalized.
    match /accounts/{accountId} {
      allow read, write: if isSignedIn() || isAdmin();
    }

    match /progress/{progressId} {
      allow read, write: if isSignedIn() || isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
